<div class="container" style="margin-top:50px">
  <div class="row">
    <div class="col-xs-6 col-sm-offset-3">
      <h1><%= form_title %></h1>
      <% if @post.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_for @post do |p| %>
      <div class="form-group">
        <%= p.text_field :title, class: "form-control input-lg", placeholder: "Title" %>
      </div>
      <div class="form-group">
        <%= p.text_area :description, class: "form-control input-lg", placeholder: "Description" %>
      </div>
      <div class="text-right">
        <%= p.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>

    </div>

  </div>
</div>
