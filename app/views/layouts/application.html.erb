<!DOCTYPE html>
<html>
  <head>
    <title>SB</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <%= link_to "Super<strong>Blog</strong>".html_safe, root_path, class:"navbar-brand" %>
          </div>

          <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li class="navbar-brand">Hola <%= current_user.nickname %></li>
            <li>
                <a href="#" class="avatar">
                  <img src="<%= Gravatar.new("#{current_user.email}").image_url %>" class="img-circle" />
                 </a>
              </li>
            <li> <%= link_to "Salir", logout_path, method: :delete, class:"navbar-brand"%></li>
            <% else %>
            <li><%= link_to "RegÃ­strate", new_user_path %></li>
            <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
        <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
        </form>


        </div>
    </nav>
    <% if flash[:notice] %>
      <div class="alert alert-info alert-dismissible fade show" role="alert"><%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
