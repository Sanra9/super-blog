<div class="container" style="margin-top:50px">
  <div class="row">
    <div class="col-xs-8 col-sm-offset-2">
        <h1>Posts</h1>
        <% if signed_in? %>
      <div class="text-right">
        <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
      </div> <br>
      <%end %>
        <% @posts.each do |p| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h1><%= p.title %></h1>
          </div>
          <div class="panel-body">
            <p><%= p.description %></p>
          </div>
          <% if signed_in? && p.user == current_user %>
          <div class="text-center">
            <%= link_to '<button type="button" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>'.html_safe, edit_post_path(p) %>
            <%= link_to '<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>'.html_safe, p, method: :delete, data: { confirm: "¿Estás seguro que quieres borrar este post?" } %>
          </div> <br>
          <%end %>
        </div>
        <% end %><br>
    </div>
  </div>
</div>
